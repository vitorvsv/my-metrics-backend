{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./e2e",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@application/(.*)$": "<rootDir>../../src/application/$1",
    "^@domain/(.*)$": "<rootDir>../../src/domain/$1",
    "^@infra/(.*)$": "<rootDir>../../src/infra/$1"
  }
}
